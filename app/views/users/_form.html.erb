<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

<div class="field">
  <%= f.label :profile_photo %>
  <%= f.file_field :profile_photo, accept: 'image/png,image/gif,image/jpeg' %>
</div>

<div class="field">
  <%= f.label :delete_profile_photo %>
  <%= f.check_box :delete_profile_photo %>
</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
