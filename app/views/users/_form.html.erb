<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label 'Photo' %>
    <%= f.file_field :profile_picture %>
  </div>

  <div class="field">
    <%= f.label :delete_profile_picture, 'Remove' %>
    <%= f.check_box :delete_profile_picture %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
