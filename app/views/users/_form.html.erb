<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :profile_photo %>
    <%= f.file_field :profile_photo %>
  </div>

  <div>
    <%= f.label :avatar %>
     <%= f.file_field :avatar %>
  </div>

  <% if @user.persisted? %>
    <div>
      <%= f.label :delete_avatar, "Remove Avatar" %>
      <%= f.check_box :delete_avatar %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
